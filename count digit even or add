// Online C compiler to run C program online
#include <stdio.h>

int main() {
    int n,a,b,count=0;
    printf("Enter the number");
    scanf("%d",&n);
    while(n>0)
    {
        a=n%10;
        b=a;
        if(b%2==0)
        {
           
            printf("\n%d=even",b);
            
        }
        else if(b%2!=0)
        {
            
            printf("\n%d=odd",b);
            
        }
        n=n/10;
        }
   // count++;
    
    printf("%d",count);
    return 0;
}


output=
Enter the number1234
4=even
3=odd
2=even
1=odd0
